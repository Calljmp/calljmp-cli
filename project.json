{
  "name": "cli",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/cli/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "common:sync": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": ".",
        "commands": [
          "rm -rf ./apps/cli/src/common && mkdir -p ./apps/cli/src/common && cp -r ./libs/common/src/* ./apps/cli/src/common/"
        ]
      }
    },
    "build:development": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": [
        "common:sync"
      ],
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/cli",
        "format": [
          "cjs"
        ],
        "bundle": false,
        "main": "apps/cli/src/main.ts",
        "tsConfig": "apps/cli/tsconfig.app.json",
        "assets": [
          {
            "glob": "**/*",
            "input": "apps/cli/templates",
            "output": "apps/cli/templates"
          }
        ],
        "minify": false,
        "esbuildOptions": {
          "sourcemap": true,
          "outExtension": {
            ".js": ".js"
          }
        }
      }
    },
    "build:production": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": [
        "common:sync"
      ],
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "platform": "node",
        "outputPath": "dist/apps/cli",
        "format": [
          "cjs"
        ],
        "bundle": false,
        "main": "apps/cli/src/main.ts",
        "tsConfig": "apps/cli/tsconfig.app.json",
        "assets": [
          "apps/cli/README.md",
          "apps/cli/LICENSE",
          {
            "glob": "**/*",
            "input": "apps/cli/templates",
            "output": "apps/cli/templates"
          }
        ],
        "generatePackageJson": true,
        "minify": true,
        "esbuildOptions": {
          "sourcemap": false,
          "outExtension": {
            ".js": ".js"
          }
        }
      }
    },
    "publish:npm": {
      "defaultConfiguration": "production",
      "executor": "nx:run-commands",
      "dependsOn": [
        "build:production"
      ],
      "options": {
        "cwd": "dist/apps/cli",
        "commands": [
          "node ../../../apps/cli/tools/post-build.js",
          "npm publish --access public"
        ],
        "parallel": false
      }
    },
    "publish:git": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "common:sync",
        "typecheck"
      ],
      "options": {
        "cwd": "apps/cli",
        "commands": [
          "./tools/git-publish.sh"
        ]
      }
    },
    "run": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "build:development"
      ],
      "options": {
        "commands": [
          "node dist/apps/cli/main.js"
        ],
        "parallel": false,
        "env": {
          "CALLJMP_BASE_URL": "http://localhost:8787"
        }
      }
    },
    "run:remote": {
      "executor": "nx:run-commands",
      "dependsOn": [
        "build:development"
      ],
      "options": {
        "commands": [
          "node dist/apps/cli/main.js"
        ],
        "parallel": false
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/cli",
        "commands": [
          "tsc -p tsconfig.app.json --noEmit"
        ]
      }
    }
  }
}