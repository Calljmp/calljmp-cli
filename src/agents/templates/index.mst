import { workflow } from '@calljmp/agent';

export const config = {
  name: '{{agentName}}',
  description: '{{agentDescription}}',
}

export async function run(input?: unknown) {
  const result = await workflow.phase(
    {
      name: 'First phase',
      description: 'This is the first phase of the agent workflow.',
    },
    () =>
      Promise.resolve({ output: 'Hello from the first phase!' })
  );

  return result;
}
